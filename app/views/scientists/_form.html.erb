<%= form.input :name %>
<%= form.input :position %>
<%= form.input :examiner, as: :boolean %>
<%= form.input :practician, as: :boolean %>

<div class="form-controls clearfix">
  <div class="pull-left">
    <%= form.button :submit %>
  </div>

  <div class="pull-left cancel-link">
    <%= link_to t('cancel'), [:edit, document], class: 'text-danger' %>
  </div>
</div>
