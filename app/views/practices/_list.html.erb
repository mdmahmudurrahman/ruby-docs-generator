<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h4><%= t '.practices' %></h4>
  </div>

  <div class="panel-body panel-body-container">
    <% if document.practices.empty? %>
        <div class="text-center">
          <%= t '.no-practices' %>
        </div>
    <% else %>
        <%= render document.practices %>
    <% end %>
  </div>

  <div class="panel-footer">
    <%= link_to t('.add'), new_document_practice_path(document) %>
  </div>
</div>
