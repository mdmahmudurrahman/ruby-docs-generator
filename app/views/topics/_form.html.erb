<%= simple_form_for [sub_module, topic] do |form| %>
    <%= form.input :name %>

    <div class="form-controls clearfix">
      <div class="pull-left">
        <%= form.button :submit %>
      </div>

      <div class="pull-left cancel-link">
        <%= link_to t('cancel'), [sub_module.main_module, sub_module], class: 'text-danger' %>
      </div>
    </div>
<% end %>
