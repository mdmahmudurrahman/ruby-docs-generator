<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h4><%= t '.modules' %></h4>
  </div>

  <div class="panel-body">
    <% if sub_module.topics.empty? %>
        <div class="text-center">
          <%= t '.no-modules' %>
        </div>
    <% else %>
        <%= render sub_module.topics %>
    <% end %>
  </div>

  <div class="panel-footer">
    <%= link_to t('.add'), new_sub_module_topic_path(sub_module) %>
  </div>
</div>
