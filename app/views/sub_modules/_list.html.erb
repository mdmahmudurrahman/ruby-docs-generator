<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h4><%= t '.modules' %></h4>
  </div>

  <div class="panel-body panel-body-container">
    <% if main_module.sub_modules.empty? %>
        <div class="text-center">
          <%= t '.no-modules' %>
        </div>
    <% else %>
        <%= render main_module.sub_modules %>
    <% end %>
  </div>

  <div class="panel-footer">
    <%= link_to t('.add'), new_main_module_sub_module_path(main_module) %>
  </div>
</div>
